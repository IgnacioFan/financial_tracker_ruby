<%= render "layouts/header", title: "Products" %>

<div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 rounded-lg" id="notice"><%= notice %></p>
  <% end %>
  <table class="w-full bg-white border shadow-lg text-center text-sm">
    <tbody>
      <tr class="mt-2 border-b border-gray-200">
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Description</th>
        <th class="px-4 py-2">Price</th>
        <th class="px-4 py-2">Creator</th>
        <th class="px-4 py-2 flex">
          <%= link_to "New", new_product_path, class: "rounded-lg px-3 py-1.5 bg-green-400 text-white font-medium" %>
        </th>
      </tr>
      <% @products.each do |product| %>
        <tr class="mt-2 border-b border-gray-200">
          <td class="px-4 py-2"><%= product.name %></td>
          <td class="px-4 py-2"><%= product.description %></td>
          <td class="px-4 py-2"><%= product.price %></td>
          <td class="px-4 py-2"><%= product.user.name %></td>
          <td class="px-4 py-2 flex">
            <%= link_to "Edit", edit_product_path(product), class: "rounded-lg px-3 py-2 bg-gray-100 font-medium" %>
            <%= button_to "Remove", product_path(product), method: :delete, class: "ml-3 rounded-lg px-3 py-2 text-white bg-red-700 font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
